.IDBG {
  background-color: #fff4f2;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.cardContainer {
  position: relative;
  top: 2%;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
}
.icon.make {
  width: 332px;
  height: 165px;
  opacity: 1;
  border-radius: 25px;
  background: linear-gradient(270deg, #fff3ca 0%, #fffdf7 100%);
  box-shadow: 5px 10px 5px 0px rgba(239, 219, 208, 0.25);
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  align-items: center;
}
.makeText {
  opacity: 1;
  font-size: 80pt;
  font-weight: 900;
  color: #e6d1c6;
  position: relative;
  top: -4%;
}
