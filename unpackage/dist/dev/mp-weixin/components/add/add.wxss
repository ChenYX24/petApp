.addContainer {
  z-index: 998;
  background-color: rgba(255, 255, 255, 0.3);
  position: fixed;
  display: grid;
  grid-template-columns: repeat(2, 200px);
  grid-template-rows: repeat(2, 200px);
  bottom: -100%;
  left: 0;
  right: 0;
  height: 100%;
  transition: bottom 0.5s ease-in-out;
  align-items: center;
  justify-items: center;
  justify-content: center;
  align-content: center;
}
.addContainer .imgAndText {
  box-shadow: 5px 7px 8px -1px rgba(239, 219, 208, 0.5);
  height: 40vw;
  width: 40vw;
  background-color: #fcceb5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 3vw;
  border-radius: 10%;
}
.addContainer .imgAndText .addImg {
  height: 15vw;
  width: 15vw;
}
.addContainer .imgAndText .addImg.imgNote {
  margin-bottom: 0.5rem;
}
.addContainer .imgAndText .addImg.face {
  height: 13vw;
  width: 13vw;
}
.addContainer .imgAndText .Text {
  color: #ffffff;
  font-family: SimHei;
}
.addContainer.show {
  bottom: 0;
}
